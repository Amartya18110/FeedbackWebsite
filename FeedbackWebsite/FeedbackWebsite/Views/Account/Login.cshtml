@model FeedbackWebsite.ViewModels.LoginViewModel

<h2>Login to the application</h2>
<form method="post" asp-controller="Account" asp-action="Login"
          asp-route-returnUrl="@Model.ReturnUrl">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label asp-for="Email"></label><br />
            <input asp-for="Email"  id="textField"/>
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label><br />
            <input asp-for="Password" id="passField"/>
            <span asp-validation-for="Password"></span>
        </div>
        <div>
            @*<label asp-for="RememberMe"></label><br />
            <input asp-for="RememberMe" />*@
            <label asp-for="RememberMe"></label> <input asp-for="RememberMe" /><br />
        </div>
        <div class="form-group">
            <input type="submit" value="Sign in" class="btn btn-primary"/>
        </div>
        <div class="form-group">
            No account yet?
            <a asp-action="Register">Register now</a>
        </div>
        <div class="form-group">
            Forgot your password?
            <a asp-controller="Account" asp-action="ForgotPassword">Reset Password</a>
        </div>
    </form>