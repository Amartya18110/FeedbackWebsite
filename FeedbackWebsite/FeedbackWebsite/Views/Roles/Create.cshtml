@model string

<div asp-validation-summary="All" class="text-danger"></div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label for="name" class="control-label">New role</label>
                <input name="name" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">Add</button> |
            <a class="btn btn-secondary" asp-controller="Roles" asp-action="Index" role="button">Back to roles list</a>
        </form>
    </div>
</div>
