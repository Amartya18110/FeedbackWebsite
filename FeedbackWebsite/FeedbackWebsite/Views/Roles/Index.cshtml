@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

<h2>List of roles</h2>
<table class="table">
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Name</td>
            <td class="text-right">
                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@role.Id">Delete</a>
                @*<form asp-action="Delete" asp-route-id="@role.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>*@
            </td>
        </tr>
    }
</table>
<a class="btn btn-primary" asp-action="Create" role="button">Add a role</a> |
<a class="btn btn-secondary" asp-action="UserList" role="button">List of users</a>